<div>
<div class="my-5">
	<%= link_to sanitize("&larr; Back to email sent"), root_path, class: "no-underline text-slate-600 hover:text-blue-400" %>
</div>
  
  
<div>
<table class="min-w-max w-full table-auto">
  <thead>
	  <tr class="bg-gray-200 text-gray-600 uppercase text-sm leading-normal">
		  <th class="py-3 px-6 text-left">Template name</th>
		  <th class="py-3 px-6 text-left">Select</th>
	  </tr>
  </thead>
  <tbody id="member-list"class="text-gray-600 text-sm font-light">
	  <% @templates.each do |template| %>
	  	<tr class="border-b border-gray-200 hover:bg-gray-100">
		    <td class="py-3 px-6 text-left">
		      <div class="flex items-center">
		        <%= template.name %>
		      </div>
		    </td>
			
		    <td class="py-3 px-6 text-left">
		      <div class="flex items-center">
		        <% if template.selected? %>
					Selected
				<% else %>
					<%= button_to "Select", select_template_path(template.id), method: :put, 
					class: "no-underline text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800" %>
				<% end %>
		      </div>
		    </td>
		</tr>
	  <% end %>
  </tbody>
</table>

</div>

</div>