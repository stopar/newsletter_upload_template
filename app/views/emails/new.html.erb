<div class="prose flex-col max-w-none flex w-full">
	
  <div class="mb-5">
  	<%= link_to sanitize("&larr; Back to email sent"), root_path, class: "no-underline text-slate-600 hover:text-blue-400" %>
  </div>

  <h1>New Email</h1>

  <%= form_with model: @email do |f| %>
    <div class="mb-6">
      <%= f.label :subject, class: "block mb-2 text-sm font-medium text-gray-900" %>
      <%= f.text_field :subject, class: "bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
    </div>
    <div class="mb-6">
      <%= f.label :body, class: "block mb-2 text-sm font-medium text-gray-900 dark:text-gray-300" %>
      <%= f.text_area :body, class: "block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500" %>
    </div>
    <div><%= f.submit :send, class: "text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center" %></div>
  <% end %>
</div>